@model TodoList.Models.Todos

<form method="post">
    <input asp-for="Id" hidden />
	<div class="p-3">
    
		<div class="form-group row">
			<h2 class="text-info p1-3">Edit Task</h2>
		</div>
		<div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                       <label asp-for="Todo">

                       </label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Todo" class="form-control"/>
                        <span asp-validation-for="Todo" class="text-danger"></span>
                    </div>

                </div>
               

       <br />
                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                           <input type="submit" class="btn btn-info w-100" value="Update"/> 
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-primary w-100" >Back</a>
                        </div>
                         
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>

	</div>

</form>
